@{
    ViewData["Title"] = "email";
    Layout = "~/Views/Shared/layoutMaster.cshtml";

}

<html>
<head>
    <link rel="stylesheet" href="">
    <style>

        body {
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-color: white; /* Set a light background color */
        }

        .form-container {
            max-width: 400px;
            margin: 50px auto; /* Center the form on the page with some top margin */
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #fff; /* Set a white background color for the form */
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            color: #555;
        }

        input,
        textarea {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

            input[type="submit"] {
                background-color: #17a2b8;
                color: #fff;
                border: none;
                padding: 10px;
                cursor: pointer;
            }

                input[type="submit"]:hover {
                    background-color: #138496;
                }

        p {
            text-align: center;
            color: #555;
        }

    </style>

</head>
<body>

    <div class="form-container">
        <form asp-action="email" method="post">
            <h1>Send Email</h1>

            <div class="form-group">
                <label for="address">Address</label>
                <input id="address" name="address" class="form-control" />
            </div>
            <div class="form-group">
                <label for="subject">Subject</label>
                <input id="subject" name="subject" class="form-control" />
            </div>
            <div class="form-group">
                <label for="body">Body</label>
                <textarea id="body" name="body" rows="4" cols="50"></textarea>
            </div>
            <input type="submit" value="Send" class="btn btn-default" />
        </form>

        <p>@ViewData["message"]</p>
    </div>

</body>
</html>